CONFIG_USB_SELF_POWERED=n

# Enable IO multiplexer
CONFIG_GPIO_MCP23017=y

# Needed to reduce this to size that will fit on F072
CONFIG_HEAP_MEM_POOL_SIZE=1024

# clock configuration
CONFIG_CLOCK_CONTROL=y


/ {
	pro_micro_pins: connector {
		compatible = "arduino-pro-micro";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map =
			<1 0 &gpio0 6 0>,	/* D1 */
			<0 0 &gpio0 8 0>,	/* D0 */
			<2 0 &gpio0 17 0>,	/* D2 */
			<3 0 &gpio0 20 0>,	/* D3 */
			<4 0 &gpio0 22 0>,	/* D4/A6 */
			<5 0 &gpio0 24 0>,	/* D5 */
			<6 0 &gpio1 0 0>,	/* D6/A7 */
			<7 0 &gpio0 11 0>,	/* D7 */
			<8 0 &gpio1 4 0>,	/* D8/A8 */
			<9 0 &gpio1 6 0>,	/* D9/A9 */
			<10 0 &gpio0 9 0>,	/* D10/A10 */
			<16 0 &gpio0 10 0>,	/* D16 */
			<14 0 &gpio1 11 0>,	/* D14 */
			<15 0 &gpio1 13 0>,	/* D15 */
			<18 0 &gpio1 15 0>,	/* A0 */
			<19 0 &gpio0 2 0>,	/* A1 */
			<20 0 &gpio0 29 0>,	/* A2 */
			<21 0 &gpio0 31 0>;	/* A3 */
	};
};

pro_micro_i2c: &i2c1 {};
pro_micro_spi: &spi1 {};
pro_micro_serial: &uart1 {};

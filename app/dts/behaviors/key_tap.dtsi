#include <dt-bindings/zmk/behaviors.h>

/ {
    macros {
#if ZMK_BEHAVIOR_OMIT(KTAP)
    /omit-if-no-ref/
#endif
        ktap: key_tap {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            display-name = "Key Tap";
            bindings = <&macro_param_1to1>, <&kp MACRO_PLACEHOLDER>;
            tap-ms = <30>;
        };
    };
};

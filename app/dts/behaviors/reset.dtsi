#include <dt-bindings/zmk/reset.h>

/ {
    behaviors {
        // Behavior can be invoked on peripherals, so name must be <= 8 characters.
        sys_reset: sysreset {
            compatible = "zmk,behavior-reset";
            #binding-cells = <0>;
            display-name = "Reset";
        };

        // Behavior can be invoked on peripherals, so name must be <= 8 characters.
        bootloader: bootload {
            compatible = "zmk,behavior-reset";
            type = <RST_UF2>;
            bootloader;
            #binding-cells = <0>;
            display-name = "Bootloader";
        };
    };
};

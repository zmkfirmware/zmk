{
  "files.associations": {
    "*.page-template": "vue",
    "*.layout-template": "vue",
    "*.vue": "vue",
    "*.code-workspace": "jsonc",
    ".env*": "dotenv",
    "*.ts": "typescript",
    "*.css": "tailwindcss",
    "*.overlay": "dts",
    "*.keymap": "dts",
    "stdlib.h": "c",
    "conn.h": "c",
    "bluetooth.h": "c",
    "log.h": "c",
    "event_manager.h": "c",
    "split_peripheral_status_changed.h": "c"
  },
  "python.analysis.include": ["app/scripts", "zephyr/scripts"],
  "[c]": {
    "editor.formatOnSave": true
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[css][json][jsonc][html][markdown][yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // ✅ Required for C++ IntelliSense
  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

  // ✅ Tells CMake Tools to look inside `app/`
  "cmake.sourceDirectory": "${workspaceFolder}/app"
}
